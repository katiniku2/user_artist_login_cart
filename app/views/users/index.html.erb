<h2>Users</h2>

      <table class="table">
        <thead>
    		<tr>
    			<th>image</th>
    			<th>name</th>
    			<th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
          <tr>
          <td><%= gravatar_for @user %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
          <td><% if current_user.admin? && !(current_user == user) %>
            <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
            <% end %>
          </td>
    		</tr>
     <% end %>
        </tbody>
    	</table>